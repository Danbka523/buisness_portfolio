<h1>New Portfolio</h1>

<%= form_with model: @portfolio do |form| %>

  <div>
    <%= form.label :curr,"Currency" %><br>
    <%= form.text_field :curr %><br>

  </div>

  <div>
    <%= form.label :name_p,"Name portfolio" %><br>
    <%= form.text_field :name_p %><br>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>